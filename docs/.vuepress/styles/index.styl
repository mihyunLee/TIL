@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;500&family=Nunito+Sans:wght@400;500;700&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Fira+Code&display=swap');

@font-face {
	font-family: "Tenada";
	src: url("https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_2210-2@1.0/Tenada.woff2")
		format("woff2");
	font-weight: normal;
	font-style: normal;
}

* {
	font-family: 'Noto Sans KR';
}

h1 {
  font-family: "Tenada";
  font-weight: 500;
  border-bottom: 17px solid #ffd816;
  word-break: keep-all;
  font-size: 5rem;
}

ul {
  list-style: none;
  line-height: 1.5rem;
}

.navbar {
	color: #acb1b7;
}

.theme-default-content code {
	font-family: inherit;
}

.theme-default-content pre code {
	font-family: 'Fira Code', monospace;	
}

.theme-default-content p img {
	display: block;
	margin-left: auto;
	margin-right: auto;
	margin: 1.6rem auto;
	border-radius: 10px;
	box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;	
}

@media (max-width: 550px) {
  h1 {
    font-size: 4.4rem;
  }

  .infoTitle {
    font-size: 1.7rem;
  }
}

@media (max-width: 430px) {
  h1 {
    font-size: 3.4rem;
  }
}
